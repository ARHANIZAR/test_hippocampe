{% extends "base.html.twig" %}

{% block title %}Entreprises{% endblock %}
{% block header %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.5/css/responsive.bootstrap4.min.css">

    <style>
    body {
        color: #404E67;
        background: #F5F7FA;
        font-family: 'Open Sans', sans-serif;
    }
    .table-wrapper {
        width: 95%;
        margin: 30px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
    }
    .table-title .add-new {
        float: right;
        height: 30px;
        font-weight: bold;
        font-size: 12px;
        text-shadow: none;
        min-width: 100px;
        border-radius: 50px;
        line-height: 13px;
        margin-bottom:15px;
    }
    .table-title .add-new i {
        margin-right: 4px;
    }
    .edit i{
        color:orange;
    }
    .delete i {
        color: red;
    }

</style> {% endblock %}
{% block content %}
    <h1>Liste des entreprises</h1>

    <div class="container-lg">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col">
                            <a  href="/company/add" type="button" class="btn btn-info add-new" style="color: white;"><i class="fa fa-plus"></i>Ajouter</a>
                        </div>
                    </div>
                </div>
                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                    <tr>
                        <th class="th-sm">#Id</th>
                        <th class="th-sm">Raison Social</th>
                        <th class="th-sm">Department</th>
                        <th class="th-sm">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for company in companys %}
                        <tr>
                            <td>{{ company['id'] }}</td>
                            <td>{{ company['name'] }}</td>
                            <td>{{ company['postal_code'] }}</td>
                            <td>

                                <a href="/company/edit/{{ company['id'] }}" class="edit" type="submit" title="Edit" data-toggle="tooltip"><i class="fas fa-pencil-ruler"></i></a>


                                <a class="delete" href="#" title="Delete" onclick="$('#deleteModalButton').attr('href','/company/delete/{{ company['id'] }}')"  data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>



                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- delete modal !-->

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation de la supréssion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Etes vous sûr de vouloir supprimer cet êlement ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a href="#" type="button" id="deleteModalButton" class="btn btn-danger">Oui</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" type="text/javascript"></script>


    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.5/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.5/js/responsive.bootstrap4.min.js" type="text/javascript"></script>




<script>

    $(document).ready(function() {
        $('#example').DataTable();
    } );

</script>
{% endblock %}




